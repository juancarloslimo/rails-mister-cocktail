<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<h2>Doses</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %></li>
     <td><%= link_to 'Destroy', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</ul>

<%= link_to 'Back', cocktails_path %> |
<%= link_to 'Create Dose', new_cocktail_dose_path(@cocktail) %>

